  <script>
    function getRandomOption(selectId) {
      const select = document.getElementById(selectId);
      const options = select.options;
      const randomIndex = Math.floor(Math.random() * options.length);
      select.selectedIndex = randomIndex;
    }

    function randomizeCrystal() {
      getRandomOption("crystalSelect");
    }

    function randomPlanet() {
      getRandomOption("planetSelect");
    }

    function randomSign() {
      getRandomOption("signSelect");
    }

    function randomHouse() {
      getRandomOption("houseSelect");
    }

    function randomizeAstrology() {
      randomPlanet();
      randomSign();
      randomHouse();
    }

    function randomizeAll() {
      randomizeCrystal();
      randomizeAstrology();
    }

    function generateInsight() {
      const crystal = document.getElementById("crystalSelect").value;
      const planet = document.getElementById("planetSelect").value;
      const sign = document.getElementById("signSelect").value;
      const house = document.getElementById("houseSelect").value;
      const question = document.getElementById("promptInput").value;

      const insight = `ðŸ”® Insight: With ${crystal} energy aligning through your ${planet} in ${sign}, ${house}, consider: "${question}". Tune into this combination's vibration for clarity.`;
      document.getElementById("insightOutput").textContent = insight;
    }
  </script>
