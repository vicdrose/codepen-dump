<script>

  const nodes = document.querySelectorAll('.node');

  nodes.forEach(node => {

    node.addEventListener('mouseenter', () => {

      node.querySelector('.tooltip').style.display = 'block';

    });

    node.addEventListener('mouseleave', () => {

      node.querySelector('.tooltip').style.display = 'none';

    });

  });

</script>

